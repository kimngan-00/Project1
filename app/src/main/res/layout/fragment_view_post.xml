<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".fragment.Fragment_View_Post">

    <TextView
        android:id="@+id/fViewPost_tvAccommodation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nabila"
        android:gravity="center"
        android:text="Accommodation"
        android:textColor="@color/colorBlack"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/raw_lv_ln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fViewPost_tvAccommodation"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">

        <TextView
            android:id="@+id/fViewPost_tvUserName"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Người Đăng"
            android:textColor="@color/colorBlack"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/fViewPost_tvPubDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Ngày Đăng "
            android:textColor="@color/colorBlack"
            android:textSize="20dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/fViewPost_imgLocation"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/raw_lv_ln"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/add_image" />

    <TextView
        android:id="@+id/fViewPost_tvNameLocate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fViewPost_imgLocation"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Location Name "
        android:textColor="@color/colorBlack"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fViewPost_tvAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fViewPost_tvNameLocate"
        android:paddingHorizontal="10dp"
        android:text="Address "
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/fViewPost_tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fViewPost_tvAddress"
        android:layout_marginTop="10dp"
        android:minLines="1"
        android:paddingHorizontal="17dp"
        android:text="Location Description"
        android:textColor="@color/colorBlack" />

    <ListView
        android:id="@+id/fViewPost_lvComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fViewPost_tvDescription" />


    <LinearLayout
        android:id="@+id/fViewPost_lnComment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/fViewPost_lvComment"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">

        <EditText
            android:id="@+id/fViewPost_edComment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:hint="Comment ... " />

        <Button
            android:id="@+id/fViewPost_btnPostComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Post" />
    </LinearLayout>


</RelativeLayout>