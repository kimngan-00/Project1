<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Fragment_Hotel">

    <TextView
        android:id="@+id/fHotel_tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nabila"
        android:gravity="center"
        android:text="Chỗ Ở"
        android:textColor="@color/colorBlack"
        android:textSize="30dp" />

    <ListView
        android:id="@+id/fHotel_lvHotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fHotel_tvTitle"
       >
    </ListView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fHotel_FAB_add_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        app:maxImageSize="150px"
        android:src="@drawable/fab_add_64px" />

</RelativeLayout>