<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Fragment_Censorship">

    <TextView
        android:id="@+id/fCensorship_tvTitle"
        android:text="Số bài viết đang chờ kiểm duyệt:   "
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColor="#0C4F81"
        android:layout_marginLeft="3dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/fCensorship_tvNumber"
        android:text="0"
        android:layout_toRightOf="@+id/fCensorship_tvTitle"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColor="#0C4F81"
        android:textAllCaps="true"
        android:layout_marginLeft="3dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/fCensorship_lvPost"
        android:layout_below="@+id/fCensorship_tvNumber"
        android:layout_marginTop="3dp"
        android:dividerHeight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>