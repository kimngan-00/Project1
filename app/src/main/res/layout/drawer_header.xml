<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/drawer_imgAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/school_director_male_skin_type_3_40px" />

    <TextView
        android:id="@+id/drawer_txtTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_imgAvatar"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:text="Name"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/drawer_txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_txtTen"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite"
        android:text="Email"
        android:textColor="@color/colorBlack"
        android:textStyle="italic|bold" />
</RelativeLayout>